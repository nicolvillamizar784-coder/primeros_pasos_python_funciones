#******** zona de funcion***********
import datotiempo

class Saludo:
    def saludar_por_hora(self):
        hora = datotiempo.datotiempo.now().hour

        # los rangos y mensajes
        rangos = {
            "mañana": range(5, 12),
            "tarde": range(12, 18),
            "noche": range(18, 22)
        }

        if hora in rangos["mañana"]:
            return "¡Buenos días!"
        elif hora in rangos["tarde"]:
            return "¡Buenas tardes!"
        elif hora in rangos["noche"]:
            return "¡Buenas noches!"
        else:
            return "¡Hola! Es muy tarde o muy temprano."

#******* codigo principal********
mi_saludo = Saludo()
print(mi_saludo.saludar_por_hora())
